<html>
    <body>
        <div class="errors">
            <%if(validationErrors) {%>
                <ul>
                    <%for(var i=0; i<validationErrors.length; i++){%>
                        <li><%= validationErrors[i].msg %></li>
                    <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/products" method="POST">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= product.title %>" placeholder="Book title">
            </div>
            <div>
                <label for="price">Price</label>
                <input type="text" name="price" value="<%= product.price %>" placeholder="Book value">
            </div>
            <div>
                <label for="description">Description</label>
                <textarea cols="20" rows="10" name="description" placeholder="Describe the book content"><%= product.description %></textarea>
            </div>
            
            <input type="submit" value="Save">
        </form>
    </body>
</html>